#!/bin/bash

set -e

BASE_DIR=$(dirname $0)

# default login is administrator/root
IP_ADDR=$(docker inspect -f '{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' bugtracker_kiwitcms_org)

export MANTIS_URL="https://${IP_ADDR}:8443/mantisbt"
export MANTIS_API_TOKEN=$(robot --variable IP_ADDR:${IP_ADDR} --quiet --log NONE --report NONE --output NONE ${BASE_DIR}/initialize.robot)

echo "$MANTIS_API_TOKEN"
echo "$MANTIS_URL"
